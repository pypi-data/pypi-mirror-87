  <stylesheet>

    <blockTableStyle id="table">
      <blockAlignment
          start="0,0" stop="-1,1" value="right"
          doc:example="" />
      <blockValign
          start="0,0" stop="2,2" value="top"
          doc:example="" />
      <blockBackground start="1,1" stop="-2,-2" colorName="purple"
          doc:example="" />
      <blockRightPadding start="0,0" stop="-1,1" length="0.1in"
          doc:example="" />
      <blockBottomPadding start="0,0" stop="-1,1" length="0.02in"
          doc:example="" />
      <blockLeftPadding start="0,0" stop="-1,1" length="0.2in"
          doc:example="" />
      <blockTopPadding start="0,0" stop="-1,1" length="0.04in"
          doc:example="" />
      <blockFont
          start="0,0" stop="1,-1" name="Courier" size="14" leading="0.5in"
          doc:example="" />
      <blockTextColor start="0,0" stop="1,-1" colorName="white"
          doc:example="" />
    </blockTableStyle>

    <blockTableStyle id="table2">
      <blockRowBackground
          start="3,0" stop="-1,-1" colorNames="blue yellow"
          doc:example="" />
      <blockLeading
          start="0,0" stop="-1,1" length="0.18in"
          doc:example="" />
    </blockTableStyle>

    <blockTableStyle id="table3">
      <blockColBackground
          start="0,0" stop="2,-1" colorNames="red green"
          doc:example="" />
      <blockSpan
          start="0,0" stop="2,2" doc:example="" />
      <blockAlignment
          start="0,0" stop="2,2" value="center" />
      <blockValign
          start="0,0" stop="2,2" value="middle"
          doc:example="" />
      <blockSpan
        start="0,3" stop="-1,3"/>

    </blockTableStyle>

    <blockTableStyle id="custom-table" doc:example="">
      <blockFont
          start="0,0" stop="-1,-1" name="Courier-Bold" size="10" />
    </blockTableStyle>

  </stylesheet>

