  <stylesheet>

    <blockTableStyle id="zebra-rows">
      <blockRowBackground
          start="1,1" stop="-2,-2"
          colorNames="red green"
          />
    </blockTableStyle>

    <blockTableStyle id="zebra-cols">
      <blockColBackground
          start="1,1" stop="-2,-2"
          colorNames="blue yellow green"
          />
    </blockTableStyle>

    <blockTableStyle id="zebra-rowcol">
      <blockColBackground
          start="0,0" stop="2,-1" colorNames="red green"
          />
      <blockRowBackground
          start="3,0" stop="-1,-1" colorNames="blue yellow"
          />
      <blockLeading
          start="0,0" stop="-1,1" length="18"
          />
    </blockTableStyle>

    <blockTableStyle id="zebra-bg-rows">
      <blockBackground start="0,1" stop="-1,-1"
          colorsByRow="0xD0FFD0;None"
          />
    </blockTableStyle>

    <blockTableStyle id="zebra-bg-rows-triple">
      <blockBackground start="0,1" stop="-1,-1"
          colorsByRow="0xD0FFD0;0xFFD0FF;None"
          />
    </blockTableStyle>

  </stylesheet>

