<?xml version="1.0" encoding="iso-8859-1" standalone="no"?>
<!DOCTYPE document SYSTEM "rml.dtd">

<document filename="tag-paraStyle.pdf">

  <template pagesize="A4" showBoundary="0" leftMargin="2.0cm"
            topMargin="2.0cm" rightMargin="2.0cm" bottomMargin="2.0cm">
    <pageTemplate id="main">
      <frame id="first" x1="1cm" y1="1cm" width="19cm" height="26cm"/>
      <pageGraphics>
          <place x="0.5cm" y="0.5cm" width="10cm" height="1cm">
            <para>Page <pageNumber /></para>
          </place>
      </pageGraphics>
    </pageTemplate>
  </template>

  <stylesheet>
    <paraStyle
       name="Custom"
       fontName="Times"
       fontSize="16pt"
       leading="18pt"
       textColor="red"
    />
  </stylesheet>

  <story>

    <title><font face="Courier">&lt;paraStyle&gt;</font> Tag Demo</title>
    <para style="Custom">
      This is a paragraph in Times New Roman, size 16pt in red.
    </para>

  </story>
</document>
