<?xml version="1.0" encoding="iso-8859-1" standalone="no"?>
<!DOCTYPE document SYSTEM "rml.dtd">

<document filename="hello-world.pdf">

  <template pagesize="A4" showBoundary="0" leftMargin="2.0cm"
            topMargin="2.0cm" rightMargin="2.0cm" bottomMargin="2.0cm">
    <pageTemplate id="main">
      <frame id="first" x1="1cm" y1="1cm" width="19cm" height="26cm"/>
    </pageTemplate>
  </template>

  <story>
    <para>There's a second page</para>
    <spacer length="9.5in"/>
    <keepTogether>
      <blockTable>
        <tr><td>Hello</td></tr>
        <tr><td>World!</td></tr>
        <tr><td>Another line</td></tr>
        <tr><td>Should be on same page</td></tr>
      </blockTable>
    </keepTogether>
  </story>

</document>
