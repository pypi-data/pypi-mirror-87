
/*===== QWidget =====*/
QWidget
{
	background-color: qlineargradient(spread:repeat, x1:1, y1:0, x2:1, y2:1, stop:0.1 rgba(58,0,153, 0.8),stop:0.5 rgba(103,0,153, 0.8), stop:1 rgba(146,0,153, 0.8));
	color: #ffffff;
	selection-background-color: #2e70a5;

}


/*===== QMenuBar =====*/
QMenuBar
{
	background-color: qlineargradient(spread:repeat, x1:1, y1:0, x2:1, y2:1, stop:0.1 rgba(44,0,115, 0.8),stop:1 rgba(58,0,153, 0.8));
	color: #ffffff;
	border-color: #051a39;

}


QMenuBar::item
{
    background-color: transparent;

}


QMenuBar::item:selected
{
    background-color: #990089;

}


QMenuBar::item:pressed
{
    background-color: #750099;
    margin-bottom: -1px;
    padding-bottom: 1px;

}


/*===== QMenu ===== */
QMenu
{
    background-color: #2b383f;
    border: 1px solid;
    color: #ffffff;

}


QMenu::separator
{
    height: 1px;
    background-color: #8f0098;
    color: #ffffff;
    padding-left: 4px;
    margin-left: 10px;
    margin-right: 10px;

}


QMenu::item
{
    min-width : 120px;
    padding: 3px 20px 3px 20px;

}


QMenu::item:selected
{
    background-color: #5A0099;
    color: #ffffff;

}


QMenu::item:disabled
{
    color: #000000;

}


/*===== QMessageBox =====*/
QMessageBox
{
    messagebox-question-icon: url(./Images/question.png);
    messagebox-critical-icon: url(./Images/critical.png);
    messagebox-information-icon: url(./Images/information.png);

}


/*===== QToolTip =====*/
QToolTip
{
	border : 1px solid #000000;
	background-color: #2b383f;
	color: #ffffff;
	border-color: #051a39;
	padding: 3px 3px 3px 3px;

}


/*===== QPushButton ===== */
QPushButton
{
	background-color: qlineargradient(spread:repeat, x1:1, y1:0, x2:1, y2:1, stop:0.1 rgba(146,0,153, 0.8), stop:1 rgba(58,0,153, 0.8));
	color: #ffffff;
	border-radius: 10px;
	padding: 5px;

}


QPushButton::hover
{
	background-color: qlineargradient(spread:repeat, x1:1, y1:0, x2:1, y2:1, stop:0.1 rgba(122,0,128, 0.8), stop:1 rgba(48,0,128, 0.8));
    color: #C0C0C0;

}


QPushButton::pressed
{
	background-color: #6a0098;

}


QPushButton::default
{
	background-color: qlineargradient(spread:repeat, x1:1, y1:0, x2:1, y2:1, stop:0.1 rgba(243,0,255, 0.8), stop:1 rgba(96,0,255, 0.8));
	color: #ffffff;

}


QPushButton#send_button
{
    background-color: none;
    font-weight: bold;

}


QPushButton:hover#send_button
{
    color: #C0C0C0;

}


/*===== QLabel =====*/
QLabel
{
	background-color: transparent;
	color: #ffffff;

}


QLabel::disabled
{
	background-color: transparent;
	color: #656565;

}


QLabel::hover#go_to_sign_up, QLabel::hover#go_to_login
{
    color: #C0C0C0;
}


/*===== QLineEdit =====*/
QLineEdit
{
	background-color: qlineargradient(spread:repeat, x1:1, y1:0, x2:1, y2:1, stop:0.1 rgba(146,0,153, 0.8),stop:0.5 rgba(103,0,153, 0.8), stop:1 rgba(58,0,153, 0.8));
	color: #ffffff;
    border: 1px solid #b8b5b2;
	padding: 3px;

}


/*===== QPlainTextEdit =====*/
QPlainTextEdit
{
	background-color: qlineargradient(spread:repeat, x1:1, y1:0, x2:1, y2:1, stop:0.1 rgba(146,0,153, 0.8), stop:1 rgba(58,0,153, 0.8));
    padding-right: 55px;
    border: 1px solid #000000;
}


/*===== QTextBrowser =====*/
QTextBrowser
{
    border: 1px solid #000000;
    padding-left: 5px;

}


/*===== QScrollBar =====*/
QScrollBar:vertical
{
	background-color: qlineargradient(spread:repeat, x1:1, y1:0, x2:1, y2:1, stop:0.1 rgba(58,0,152, 0.8), stop:0.5 rgba(100,0,152, 0.8), stop:1 rgba(140,0,152, 0.8));
    width: 15px;
    margin: 15px 0 15px 0;

}


QScrollBar::handle:vertical
{
	background-color: qlineargradient(spread:repeat, x1:1, y1:0, x2:1, y2:1, stop:0.1 rgba(139, 0, 152, 0.8), stop:1 rgba(58, 0, 152, 0.8));
    min-height: 30px;

}


QScrollBar::add-line:vertical
{
	background-color: qlineargradient(spread:repeat, x1:1, y1:0, x2:1, y2:1, stop:0.1 rgba(58, 0, 152, 0.8), stop:1 rgba(44,0,115, 0.8));
    height: 15px;
    width: 15px;
    subcontrol-position: bottom;
    subcontrol-origin: margin;

}


QScrollBar::sub-line:vertical
{
	background-color: qlineargradient(spread:repeat, x1:1, y1:0, x2:1, y2:1, stop:0.1 rgba(110,0,115, 0.8), stop:1 rgba(139, 0, 152, 0.8));
    height: 15px;
    width: 15px;
    subcontrol-position: top;
    subcontrol-origin: margin;

}


/*===== QStatusBar ===== */
QStatusBar
{
	background-color: qlineargradient(spread:repeat, x1:1, y1:0, x2:1, y2:1, stop:0.1 rgba(110,0,115, 0.8),stop:1 rgba(146,0,153, 0.8));
	color: #ffffff;

}
