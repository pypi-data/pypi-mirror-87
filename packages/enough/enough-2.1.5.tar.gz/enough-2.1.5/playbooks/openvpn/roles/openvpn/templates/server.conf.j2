port 1194
proto udp
dev tun
ca ca.crt
cert server.crt
key server.key  # This file should be kept secret
dh dh.pem
crl-verify crl.pem
server {{ openvpn_server_ip_range }}
keepalive 10 120
tls-auth ta.key 0 # This file is secret
cipher AES-256-CBC
user nobody
group nogroup
persist-key
persist-tun
ifconfig-pool-persist ipp.txt
client-to-client
client-config-dir ccd
{{ openvpn_server_conf }}
